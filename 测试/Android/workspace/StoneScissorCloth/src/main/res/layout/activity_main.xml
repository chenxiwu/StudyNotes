<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.sy.stonescissorcloth.MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="32dp"
        android:textAlignment="center"
        android:textColor="#000000"
        android:text="猜拳游戏" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/beautiful_girl1"
                android:scaleType="fitCenter">
            </ImageView>

            <RadioGroup
                android:id="@+id/leftRadioGroupId"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <RadioButton
                    android:id="@+id/leftStoneRadioButtonId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="石头"/>
                <RadioButton
                    android:id="@+id/leftScissorRadioButtonId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="剪刀"/>
                <RadioButton
                    android:id="@+id/leftClothRadioButtonId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="布"/>
            </RadioGroup>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/beautiful_girl2"
                android:scaleType="fitCenter">
            </ImageView>

            <RadioGroup
                android:id="@+id/rightRadioGroupId"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <RadioButton
                    android:id="@+id/rightStoneRadioButtonId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="石头"/>
                <RadioButton
                    android:id="@+id/rightScissorRadioButtonId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="剪刀"/>
                <RadioButton
                    android:id="@+id/rightClothRadioButtonId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="布"/>
            </RadioGroup>
        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/confirmButtonId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="确  定" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/resultTextId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="#000000"
            android:text="结果："/>

        <TextView
            android:id="@+id/testResultTextId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="#FF0000"/>
    </LinearLayout>
</LinearLayout>
